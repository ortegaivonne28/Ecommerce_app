<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:id="@+id/root_recycler_view_wishlist_activity"
    android:padding="10dp"
    android:background="#ffff">

    <ImageView
        android:layout_width="170dp"
        android:id="@+id/image_wishlist"
        android:layout_height="150dp"/>

    <LinearLayout
        android:layout_toRightOf="@id/image_wishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand"
            android:id="@+id/brand_wishlist"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/model_wishlist"
            android:text="Model"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:id="@+id/price_wishlist"
            android:textColor="@color/colorAuxProductPage"/>

    </LinearLayout>

</RelativeLayout>