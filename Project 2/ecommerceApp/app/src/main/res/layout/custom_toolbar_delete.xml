<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:id="@+id/remove_tool_bar"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="60dp">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/root_toolbar_delete"
            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_custom_toolbar"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="TITLE"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_delete_white_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/remove"
            android:layout_marginRight="40dp"/>




        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_more_vert_white_24dp"
            android:layout_alignParentRight="true"
            android:id="@+id/overflow_main_activity"
            android:layout_centerVertical="true"
            android:paddingRight="13dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>


    </RelativeLayout>

</LinearLayout>